enum Role {
  ADMIN
  USER
}

type User {
  id: ID!
  email: String!
  password: String!
  role: Role!
  imageUrl: String
  bookmarks: [Link]
  links: [Link]
  createdAt: Time!
  updatedAt: Time!
}

input CreateUserInput {
  email: String!
  password: String!
  image: Upload
}

extend type Query {
  me: User!
}

extend type Mutation {
  register(createUserInput: CreateUserInput!): User!
}
