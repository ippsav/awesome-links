type Link {
  id: ID!
  title: String!
  description: String!
  imageUrl: String
  url: String!
  owner: User!
  createdAt: Time!
  updatedAt: Time!
}

input CreateLinkInput {
  title: String!
  description: String!
  image: Upload
  url: String!
  ownerID: ID!
}

extend type Mutation {
  createLink(createLinkInput: CreateLinkInput!): Link!
}

extend type Query {
  link(id: ID!): Link
}
